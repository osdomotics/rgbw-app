#:kivy 1.6

<RGBW_Led_Widget>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    red: red
    green: green
    blue: blue
    white: white
    brightness: brightness
    color: color
    switch: switch
    status: status
    buttoncontainer: buttoncontainer

    TextInput:
        multiline: False
        id: status
        size_hint_y: 0.1

    BoxLayout:
        orientation: "horizontal"
        spacing: 10
        size_hint_y: 0.1
        Widget:
            id: color
            size_hint_x: 0.7
            canvas:
                Rectangle:
                    size: self.size
                    pos:  self.pos
        Switch:
            id: switch
            active: True
            size_hint_x: 0.3

    GridLayout:
        spacing: 5
        cols: 5
        size_hint_y: 0.4

        Label:
            text: "Red"
            size_hint_x: 0.1
        Label:
            id: red_value
            text: "0"
            size_hint_x: 0.1
        Slider:
            size_hint_x: 0.6
            min: 0
            max: 255
            step: 1
            id: red
            on_value: red_value.text = "%d" % int (self.value)
            on_value: app.color_changed ()
        Button:
            text: "+"
            on_release: red.value = min ([red.value + 1, red.max])
            size_hint_x: 0.1
        Button:
            text: "-"
            on_release: red.value = max ([red.value -1, red.min])
            size_hint_x: 0.1

        Label:
            text: "Green"
            size_hint_x: 0.1
        Label:
            id: green_value
            text: "0"
            size_hint_x: 0.1
        Slider:
            size_hint_x: 0.6
            min: 0
            max: 255
            step: 1
            id: green
            on_value: green_value.text = "%d" % int (self.value)
            on_value: app.color_changed ()
        Button:
            text: "+"
            on_release: green.value = min ([green.value + 1, green.max])
            size_hint_x: 0.1
        Button:
            text: "-"
            on_release: green.value = max ([green.value -1, green.min])
            size_hint_x: 0.1

        Label:
            text: "Blue"
            size_hint_x: 0.1
        Label:
            id: blue_value
            text: "0"
            size_hint_x: 0.1
        Slider:
            size_hint_x: 0.6
            min: 0
            max: 255
            step: 1
            id: blue
            on_value: blue_value.text = "%d" % int (self.value)
            on_value: app.color_changed ()
        Button:
            text: "+"
            on_release: blue.value = min ([blue.value + 1, blue.max])
            size_hint_x: 0.1
        Button:
            text: "-"
            on_release: blue.value = max ([blue.value -1, blue.min])
            size_hint_x: 0.1

        Label:
            text: "White"
            size_hint_x: 0.1
        Label:
            id: white_value
            text: "0"
            size_hint_x: 0.1
        Slider:
            size_hint_x: 0.6
            min: 0
            max: 255
            step: 1
            id: white
            on_value: white_value.text = "%d" % int (self.value)
            on_value: app.color_changed ()
        Button:
            text: "+"
            on_release: white.value = min ([white.value + 1, white.max])
            size_hint_x: 0.1
        Button:
            text: "-"
            on_release: white.value = max ([white.value -1, white.min])
            size_hint_x: 0.1

        Label:
            text: "Bright"
            size_hint_x: 0.1
        Label:
            id: brightness_value
            text: "0"
            size_hint_x: 0.1
